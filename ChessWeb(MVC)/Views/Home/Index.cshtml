@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1 style="margin:0;">Play Chess Online</h1>
    <hr style="border-color: #808080;" />
    <br />
    <div id="FenInDiv">
        Set Fen:<br />
        <input type="text" id="fenIn" class="form-control" style="display: inline-block;" value="rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1" />
        <button class="btn btn-default btn-md" type="button" id="SetFen">Set Position</button>
        <button class="btn btn-default btn-md" type="button" id="NewGameButton">New Game</button>
    </div>

    <div class="row">
        <div class="col-md-7 col-lg-7" id="Board"></div>

        <div class="col-md-4 col-lg-4" style="margin:10px 0 0 80px;">
            <h3><u>Game Output</u></h3>
                <span id="BestOut">Best Move:</span><br />
                @*<span id="DepthOut">Depth:</span><br />*@
                <span id="ScoreOut">Score:</span><br />
                @*<span id="NodesOut">Nodes:</span><br />
                <span id="OrderingOut">Ordering:</span><br />*@
                <span id="TimeOut">Time:</span><br />
            <hr style="border-color: #808080;" />
            <h3><u>Game Setting</u></h3>
            <br />
            <div id="enginesetting">
                Thinking Time:
                <select id="ThinkTimeChoice">
                    <option value="1">1s</option>
                    <option value="2">2s</option>
                    <option value="4">4s</option>
                    <option value="6">6s</option>
                    <option value="8">8s</option>
                    <option value="10">10s</option>
                </select>
            </div>
            <button class="btn btn-default btn-md" type="button" id="SearchButton">Next Move</button>
            <button class="btn btn-default btn-md" type="button" id="TakeButton">Undo Move</button>
            @*<button class="btn btn-default btn-md" type="button" id="FlipButton">flip board</button>*@
            <hr style="border-color: #808080;" />
            <span id="GameStatus"></span>
        </div>
    </div>
</div>

